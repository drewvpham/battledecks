<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Make a New Tournament</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= form_for(@tournament, :role => "form") do |f| %>
      <div class="form-group">
        <%= f.label :name, :class => "control-label" %>
        <%= f.text_field :name, :class => "form-control" %>
        <% if @tournament.errors[:name].any? %>
        <p class="help-block-error"><%= @tournament.errors.full_messages_for(:name).to_sentence %></p>
        <% end %>
      </div>

      <div class="form-group">
        <%= f.label :player_ids_to_add, "Choose Players", :class => "control-label" %>
        <%= f.collection_select :player_ids_to_add, @tournament.available_players, :id, :email, {}, {:class => "form-control", :multiple => true} %>
        <% if @tournament.errors[:player_ids_to_add].any? %>
        <p class="help-block-error"><%= @tournament.errors[:player_ids_to_add].to_sentence.capitalize %></p>
        <% end %>
      </div>

      <%= f.submit "Create Tournament", :class => "btn btn-default" %>
    <% end %>
  </div>
</div>
