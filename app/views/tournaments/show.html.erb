<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header"><%= @tournament.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        Players
      </div>
      <!-- /.panel-heading -->
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>#</th>
                <th>Email</th>
              </tr>
            </thead>
            <tbody>
              <% @tournament.players.each.with_index(1) do |player,i| %>
              <tr>
                <td><%= i %></td>
                <td><%= player.email %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <% if @tournament.has_rounds? %>
      <% @tournament.rounds.each do |round, matches| %>
        <%= link_to "Round #{round} - #{pluralize(matches.size, "Match")}", tournament_round_path(@tournament, round) %>
      <% end %>
    <% else %>
      <%= link_to new_tournament_bracket_path(@tournament), :class => "btn btn-primary btn-lg btn-block" do %>
        <i class="fa fa-list"></i> Generate a Bracket
      <% end %>
    <% end %>
  </div>
</div>
