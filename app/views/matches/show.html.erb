<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">
      <%= @tournament.name %> - Round: <%= params[:id] %> - <%= @match.player_1.email %> vs <%= @match.player_2.email %>
      <% if @tournament.commissioner?(current_user) %>
      <div class="pull-right">
        <div class="btn-group">
          <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown" aria-expanded="false">
            Commissioner Actions
            <span class="caret"></span>
          </button>
          <ul class="dropdown-menu pull-right" role="menu">
            <li><%= link_to "End Match", tournament_match_path(@tournament, @match, :status => :end), :method => :patch %></li>
          </ul>
        </div>
      </div>      
      <% end %>
    </h1>
  </div>
</div>

<div class="row">
  <%= render 'matches/player_presentation', :player => :player_1 %>
  <%= render 'matches/player_presentation', :player => :player_2 %>
</div>
