<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">Upload a Your Presentation</h1>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <%= form_for(@match, :url => tournament_match_presentations_path(@tournament, @match), :method => :post, :role => "form") do |f| %>
      <div class="form-group">
        <%= f.label :"#{@match.current_player(current_user)}_presentation_url", :class => "control-label" %>
        <%= f.text_field :"#{@match.current_player(current_user)}_presentation_url", :class => "form-control" %>
      </div>

      <%= f.submit "Upload Presentation", :class => "btn btn-default" %>
    <% end %>
  </div>
</div>
